        "composite": true,
        "declaration": true,
        "rootDir": ".",
        "outDir": "lib",
        "baseUrl": ".",
        "strict": true,
        "module": "commonjs",
        "target": "esnext",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "resolveJsonModule": true,
        "paths": {
            "@docker-watch/*": [
                "packages/*/src/index.ts"
            ]
        }
